# this looks like a nice place to keep functions that will often be reused.

function ask_with_a_no_default -a question yes_response no_response #question_color
  if test -z $question
    set question "[y/N]"
  end
  while true
    #if test -n $question_color;
    #  echo "A color that definitely exists is $question_color"
    #  set available_colors (set_color --print-colors)
    #  if contains $question_color $available_colors
    #    echo "setting question color: $question_color"
    #    set_color $question_color
    #  else
    #    set printable_colors (string join ', ' $available_colors)
    #    echo "You must pick one of $printable_colors, or a hex color no larger than FFFFFF" 
    #  end
    #else
    #  set_color normal
    #end
    read -l --prompt-str=$question answer
    switch $answer
      case Y y
        if test -n $yes_response
          echo $yes_response
        end
        return 0
      case \*
        if test -n $no_response
          echo $no_response
        end
        return 1
    end
  end
end

